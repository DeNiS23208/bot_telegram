[Unit]
Description=Telegram Bot Webhook Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/bot_telegram
Environment="PATH=/opt/bot_telegram/venv/bin:/usr/bin:/usr/local/bin:/root/.local/bin"
ExecStart=/opt/bot_telegram/venv/bin/python3 -m uvicorn webhook_app:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

